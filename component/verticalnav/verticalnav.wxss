/* pages/component/nav/nav.wxss */

.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 200rpx;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}

.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}

.VerticalBox {
  display: flex;
}

.VerticalMain {
  background-color: #f8f8f8;
}

.VerticalMain .cu-item {
  border-bottom: 1px solid rgba(241, 236, 236, 1);
  padding: 32rpx 32rpx 32rpx 15rpx;
  box-sizing: border-box;
}

.VerticalMain .cu-item image {
  width: 200rpx;
  height: 200rpx;
  background-color: #ccc;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.VerticalMain .cu-item .cu-item_info {
  width: 284rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.VerticalMain .cu-item .cu-item_info .goods_name {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.VerticalMain .cu-item .cu-item_info .price text:nth-child(2) {
  margin: 0 36rpx 0 2rpx;
  font-size: 44rpx;
  font-weight: 500;
}

.VerticalMain .cu-item .cu-item_info .price text {
  font-size: 24rpx;
  color: rgba(225, 26, 26, 1);
}

.VerticalMain .cu-item .cu-item_info .price text:nth-child(3) {
  color: rgba(102, 102, 102, 1);
}
