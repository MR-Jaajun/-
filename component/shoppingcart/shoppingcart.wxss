.car_body {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 32rpx;
  background: rgba(250, 250, 250, 1);
  font-size: 28rpx;
}

.car_signin {
  text-align: center;
  margin: 138rpx 0 32rpx;
}

.car_signin_txt {
  font-size: 28rpx;
  color: #666;
}

.sign_in_sub {
  width: 152rpx;
  /* height: 56rpx;
