}

.car_line {
  width: 680rpx;
  border-bottom: 2rpx dashed rgba(153, 153, 153, 1);
}

.caini {
  margin: 16rpx 0 26rpx;
  text-align: center;
  font-size: 24rpx;
  color: #666;
}

.car_section {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
}

.youxuan_sview .van-tag {
  margin-right: 20rpx;
}

.van_tag_view {
  line-height: 1;
  padding-bottom: 18rpx;
