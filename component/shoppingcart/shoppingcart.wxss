}

/* 购物车没有商品 */

.car_nopro {
  margin-top: 6rpx;
  text-align: center;
}

.car_nopro image {
  width: 144rpx;
  height: 150rpx;
}

.car_nopro view {
  margin: 16rpx 0;
  font-size: 22rpx;
}

