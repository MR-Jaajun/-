/* pages/mall/mall.wxss */

page {
  background: rgba(248, 248, 248, 1);
}

.top_bar {
  width: 100%;
  /* padding: 0 32rpx; */
  display: flex;
  align-items: center;
  background: #fff;
  color: #fff;
  justify-content: space-around;
  /* box-sizing: border-box; *//* padding-bottom:50rpx; */
}

.top_bar image {
  width: 36rpx;
  height: 40rpx;
}

/* 轮播 */

.hot {
  padding: 0 20rpx;
}

.hot text {
  font: bold 28rpx Arial;
  letter-spacing: 2rpx;
}

.hot swiper {
  height: 212rpx;
  margin-top: 20rpx;
}

.hot swiper image {
  /* background: #ccc; */
  width: 710rpx;
  height: 212rpx;
  border-radius: 12RPX;
}

/* 导航 */

.nav {
  /* height: 164rpx; */
  margin-top: 24rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.nav_item {
  display: flex;
  width: 20%;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.nav_item image {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 10rpx;
}

.nav_item text {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(51, 51, 51, 1);
}

/* 限时抢购 */

.sale {
  height: 332rpx;
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
}

.sale .left, .sale .right {
  width: 348rpx;
  height: 332rpx;
  background: rgba(255, 255, 255, 0.55);
  box-shadow: 0px 0px 12rpx rgba(0, 0, 0, 0.16);
}

.sale_top {
  height: 100rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.sale_top image {
  width: 144rpx;
  height: 54rpx;
}

.sale_top .sale_time {
  position: relative;
  width: 182rpx;
  height: 32rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(225, 26, 26, 1);
  border-radius: 20rpx;
}

.left .sale_time .time {
  text-align: center;
  width: 80rpx;
  height: 32rpx;
  background: linear-gradient(91deg, rgba(248, 99, 99, 1) 0%, rgba(239, 76, 34, 1) 100%);
  border-radius: 20rpx;
  font-size: 20rpx;
  color: #fff;
}

.left .sale_top .sale_time .cutdown {
  position: absolute;
  right: 2rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 18rpx !important;
}

.cutdown .van-count-down {
  color: #f0502d;
  /* color: var(--count-down-text-color, #f0502d) !important; */
  font-size: 18rpx !important;
  /* font-size: var(--count-down-font-size, 18rpx) !important; */
}

.sale_bottom {
  display: flex;
  justify-content: flex-start;
  padding: 0 18rpx;
}

.sale_bottom view {
  width: 144rpx;
  /* height: 154rpx; */
  display: flex;
  flex-direction: column;
  margin-right: 24rpx;
}

.sale_bottom view image {
  margin-bottom: 10rpx;
  width: 148rpx;
  height: 148rpx;
  background: #58bc58;
  border-radius: 4rpx;
}

.right .sale_top {
  padding-left: 20rpx;
  justify-content: flex-start;
}

.right .sale_top .sale_time {
  margin-left: 16rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  width: 126rpx;
  height: 34rpx;
  background: rgba(255, 255, 255, 1);
  border: 2rpx solid rgba(245, 132, 132, 1);
  border-radius: 20rpx;
}

.price {
  position: relative;
  height: 60rpx;
}

.price text {
  font-size: 24rpx;
  position: absolute;
  color: #e11a1a;
}

.price text:nth-child(2) {
  right: 4rpx;
  bottom: 2rpx;
  color: #ccc;
  text-decoration: line-through;
}

/* 推荐专区 */

.recommend {
  padding: 0 20rpx;
  margin-top: 30rpx;
  /* margin-bottom: 50rpx; */
  height: 100%;
}

.r_title {
  width: 710rpx;
  height: 80rpx;
  position: relative;
}

.r_title .title_img {
  width: 710rpx;
  height: 80rpx;
}

.more {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 22rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  width: 120rpx;
}

.more text {
  color: #f8f8f8;
  font-size: 24rpx;
}

.more image {
  width: 14rpx;
  height: 24rpx;
}

.r_con {
  height: 100%;
  padding-top: 20rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
  background: url('https://apitest.xgscheng.com/static/weapp/isdc.png') no-repeat;
  background-size: 716rpx 274px;
}

.r_item {
  width: 334rpx;
  height: 472rpx;
}

.r_item image {
  width: 334rpx;
  height: 334rpx;
  background: #58bc58;
  border-radius: 8rpx 8rpx 0 0;
}

.r_item .goods_title {
  display: block;
  text-align: left;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 14rpx;
  margin-left: 6rpx;
  overflow: hidden;
}

.r_item .goods_price {
  height: 56rpx;
  line-height: 56rpx;
  display: flex;
  justify-content: space-between;
}

.goods_price text:nth-child(1) {
  color: #e11a1a;
  font-size: 40rpx;
  /* margin-left: 14rpx; */
  /* margin-right: 36rpx; */
}

.goods_price text:nth-child(2) {
  color: #666;
  font-size: 24rpx;
}

