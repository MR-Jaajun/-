/* pages/mall/goodsDetail/goodsDetail.wxss */

/* 图片和价格 */

.top {
  width: 750rpx;
  height: 700rpx;
  position: relative;
}

.top .cover_image {
  width: 750rpx;
  height: 596rpx;
}

.top .cover_image image {
  width: 750rpx;
  height: 596rpx;
}

.top .top_price {
  width: 750rpx;
  height: 104rpx;
  background: rgba(201, 29, 29, 1);
  position: absolute;
  bottom: 0;
  display: flex;
  align-items: center;
}

.price1 {
  margin: 0 30rpx 0 32rpx;
}

.price1 text {
  color: #fff;
}

.price1 text:nth-child(1) {
  font-size: 28rpx;
  font-weight: 400;
}

.price1 text:nth-child(2) {
  font-size: 56rpx;
  font-weight: 500;
}

.discount {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.discount text:nth-child(1) {
  font-size: 20rpx;
  font-weight: 400;
  text-decoration: line-through;
  color: rgba(232, 149, 149, 1);
}

.discount text:nth-child(2) {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(229, 217, 217, 1);
}

.discount .kill {
  font-size: 24rpx;
  font-weight: 400;
  border: 2rpx solid #e1e1e1;
  color: #e5d9d9;
  width: 132rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  border-radius: 26rpx;
}

.discount .kill2 {
  /* width: 106rpx; */
  padding: 0 6rpx;
  height: 38rpx;
  background: rgba(28, 21, 21, 1);
  opacity: 0.14;
  border-radius: 4rpx;
  color: #f1eaea;
  text-align: center;
  line-height: 38rpx;
}

.timeout {
  margin-left: 180rpx;
}

.timeout view:nth-child(1) {
  display: flex;
  align-items: center;
}

.timeout .van-count-down {
  color: #f3c66b;
  font-size: 24rpx;
  margin-left: 10rpx;
}

.top_price .pinknum {
  position: absolute;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(243, 198, 107, 1);
  top: 50%;
  transform: translateY(-50%);
  right: 32rpx;
}

/* 进度条 */

.timeout .progress {
  width: 180rpx;
  height: 22rpx;
  background: rgba(243, 185, 69, 1);
  border-radius: 26rpx;
  position: relative;
}

.progress text {
  color: #c91d1d;
  position: absolute;
  left: 50%;
  top: 50%;
  font-size: 18rpx;
  transform: translateX(-50%) translateY(-50%);
}

.progress>view {
  /* width: 38rpx; */
  max-width: 180rpx;
  height: 22rpx;
  background: rgba(223, 144, 8, 1);
  border-radius: 26rpx;
  position: absolute;
  left: 0;
}

.img image {
  width: 44rpx;
  height: 76rpx;
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-40%);
}

/* 商品标题 月销量 */

.common {
  border-bottom: 8rpx solid #f8f8f8;
  box-sizing: border-box;
  padding: 20rpx 32rpx;
  width: 750rpx;
}

.title {
  /* height: 180rpx; */
}

.title .gtitle {
  font-family: PingFang SC;
  width: 616rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 44rpx;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
  margin-bottom: 16rpx;
}

.title .gsales {
  display: flex;
  justify-content: flex-start;
  color: #999;
  font-size: 22rpx;
}

/* 优惠券 */

.getCoupon {
  height: 66rpx;
}

/* 选择规格 */

.size, .getCoupon {
  height: 70rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.size text, .getCoupon text {
  font-size: 24rpx;
  color: #333;
}

.getCoupon>view {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.getCoupon .getcoupon {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

/* 拼团人数 */

.pinkNum {
  /* height: 260rpx; */
  padding: 0;
}

.pinkNum .pinktitle {
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
  margin: 16rpx 0 0 32rpx;
}

.pinkNum .pinkList {
  height: 100rpx;
  /* padding: 30rpx 32rpx; */
  box-sizing: border-box;
  position: relative;
  border-bottom: 1px solid rgba(241, 236, 236, 1);
}

.pinkList .btn {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  text-align: center;
  line-height: 44rpx;
  width: 108rpx;
  height: 44rpx;
  background: rgba(225, 26, 26, 1);
  border-radius: 26rpx;
  font-size: 24rpx;
  color: #fff;
}

.pinkList .userinfos {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 52rpx;
}

.pinkList .userinfos image {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  background: #ccc;
  margin-right: 12rpx;
}

.pinkList .userinfos text {
  color: #666;
  font-size: 24rpx;
}

.pinkList .pinktime {
  display: flex;
  /* width: 164rpx; */
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 216rpx;
  font-size: 20rpx;
}

.pinkList .pinktime .van-count-down {
  font-size: 22rpx;
}

/* 评论 */

.c_top {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.box_a_main {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  /* box-sizing: border-box; */
  flex-wrap: wrap;
  font-size: 20rpx;
}

.box_a_main .a_main {
  border-radius: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 12rpx 20rpx;
  margin: 20rpx 20rpx 20rpx 0;
  background: #eeedec;
  color: #898787;
}

.box_a_main .active {
  background: #ff4f00;
  border-radius: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 12rpx 20rpx;
  margin: 20rpx 20rpx 20rpx 0;
  color: #fff;
}

/* .user {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
} */

.user .u1 {
  display: flex;
  height: 70rpx;
  margin-bottom: 18rpx;
  align-items: center;
}

.user .u1 image {
  width: 52rpx;
  height: 52rpx;
  background: #ccc;
  border-radius: 50%;
  margin-right: 14rpx;
}

.user .u1 .username {
  display: flex;
  font-weight: bold;
  font-size: 24rpx;
  color: rgba(51, 51, 51, 1);
  /* height: 52rpx; */
  flex-direction: column;
}

.van-rate__icon {
  display: inline-block !important;
}

.username .aaa {
  margin-top: -4rpx;
}

.user .u2 {
  font-size: 20rpx;
  color: rgba(153, 153, 153, 1);
  letter-spacing: 2rpx;
  margin-bottom: 18rpx;
}

.user .u3 {
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
  font-size: 24rpx;
}

/* 店铺 */

.shop {
  height: 200rpx;
  border-bottom: 2rpx solid #f8f8f8;
  /* margin-bottom: 50rpx; */
}

.shop_top {
  height: 100rpx;
  position: relative;
  margin-bottom: 28rpx;
  display: flex;
  justify-content: flex-start;
}

.shop_top image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 8rpx;
  background-color: #ccc;
  margin-right: 24rpx;
}

.s_info .title2 {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.s_info text {
  font-size: 20rpx;
  color: #666;
}

.s_info .s1 {
  display: flex;
  align-items: center;
}

.s_info .rates {
  display: flex;
  height: 70rpx;
}

.shop_top .toshop {
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  width: 126rpx;
  height: 46rpx;
  background: rgba(255, 79, 0, 1);
  border-radius: 26rpx;
  text-align: center;
  line-height: 46rpx;
  color: #fff;
  font-size: 22rpx;
}

.shop_bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.shop_bottom text {
  font-size: 22rpx;
  color: rgba(153, 153, 153, 1);
  letter-spacing: 2rpx;
}

/* 查看更多 */

.loadmore {
  height: 80rpx;
  font-size: 20rpx;
  line-height: 80rpx;
  text-align: center;
  color: rgba(102, 102, 102, 1);
  letter-spacing: 2rpx;
}

/* 底部栏 */

.car, .buy {
  height: 80rpx;
  width: 216rpx;
  font-size: 28rpx;
  /* font-weight: bold; */
  text-align: center;
  line-height: 80rpx;
}

.car {
  background: linear-gradient(90deg, rgba(70, 77, 83, 1) 0%, rgba(46, 52, 55, 1) 100%);
  border-radius: 40rpx 0 0 40rpx;
  color: #fff;
}

.buy {
  background: rgba(252, 206, 6, 1);
  border-radius: 0 40rpx 40rpx 0;
  color: #333;
}

/* 优惠券弹窗 */

.coupons {
  padding: 0 20rpx;
  box-sizing: border-box;
}

.coupons .titles {
  /* width: 84px; */
  text-align: center;
  line-height: 84rpx;
  height: 84rpx;
  font-family: PingFang SC;
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
  border-bottom: 2rpx solid #f1ecec;
}

/* 完成的按钮 */

.finish {
  position: absolute;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 670rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-weight: bold;
  font-size: 28rpx;
  color: #fff;
  letter-spacing: 2rpx;
  background: linear-gradient(94deg, rgba(63, 73, 80, 1) 0%, rgba(44, 52, 56, 1) 100%);
  box-shadow: 0px 18rpx 28rpx rgba(0, 0, 0, 0.14);
  border-radius: 66rpx;
}

/* 优惠券 */

.discounts {
  width: 686rpx;
}

.disconut_item {
  position: relative;
  width: 710rpx;
  height: 160rpx;
  margin-bottom: 10rpx;
  background-image: url('https://apitest.xgscheng.com/static/weapp/youhui2.png');
  background-size: 710rpx 160rpx;
}

.price {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 150rpx;
}

.price_left {
  margin: 0 16rpx 0 70rpx;
  color: #e11a1a;
  font-size: 20rpx;
}

.price_right {
  display: flex;
  flex-direction: column;
  color: #ce2041;
  font-size: 20rpx;
}

.price .manjian {
  height: 28rpx;
  width: 104rpx;
  line-height: 28rpx;
  text-align: center;
  background: url('https://apitest.xgscheng.com/static/weapp/manjian.png') no-repeat, #999;
  background-size: 104rpx 28rpx;
  color: #fff;
  font-size: 16rpx;
  display: block;
  margin: 4rpx 0;
  border-radius: 16rpx;
}

.price_right text:nth-child(3) {
  color: #b92654;
  font-size: 16rpx;
}

/* 过期 */

.due {
  color: #999 !important;
}

.due2 {
  background-image: none !important;
}

.liji {
  width: 152rpx;
  height: 56rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  text-align: center;
  line-height: 56rpx;
  color: rgba(255, 255, 255, 1);
  letter-spacing: 2rpx;
  background-image: url('https://apitest.xgscheng.com/static/weapp/liji.png');
  background-size: 152rpx 56rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 30rpx;
}


.detail_img{
  width: 750rpx;
  padding: 20rpx;
}
.detail_img image{
  width: 710rpx;
  height: 580rpx;
  background: #ccc;
  margin-bottom: 10rpx;
}