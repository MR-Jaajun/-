/* pages/mall/shoppingCart/shoppingCart.wxss */

.page {
  background: #f4f4f4;
  width: 750rpx;
  font-family: PingFang SC;
}

.cart-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 90rpx;
  line-height: 90rpx;
  box-sizing: border-box;
  background: #fff;
  color: #333;
  border-top: 1rpx solid #f4f4f4;
  z-index: 1000;
  display: flex;
  justify-content: space-between;
}

.total-select {
  position: absolute;
  left: 20rpx;
  top: 25rpx;
  width: 45rpx;
  height: 45rpx;
}

.selectAll {
  margin-left: 80rpx;
}

.footer-toatl {
  display: flex;
  justify-content: center;
  align-items: center;
}

.price {
  margin-right: 50rpx;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
}

.right_text {
  width: 200rpx;
  text-align: center;
  background: rgba(64, 147, 238, 1);
}

/* 列表信息 */

.common {
  width: 710rpx;
  box-shadow: 0px 2rpx 12rpx rgba(0, 0, 0, 0.03);
  background: rgba(255, 255, 255, 1);
  border-radius: 12rpx;
  opacity: 1;
  box-sizing: border-box;
  margin: 10rpx 20rpx;
}

.shop_info {
  /* height: 246rpx; */
  padding: 22rpx 14rpx;
  box-sizing: border-box;
}

.shop_info .info1 {
  display: flex;
  align-items: center;
}

.shop_info .info1 text {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.shop_info .info1 image {
  width: 31rpx;
  height: 31rpx;
  margin-left: 26rpx;
  margin-right: 16rpx;
}

.shop_info .info2 {
  display: flex;
  align-items: center;
  margin: 20rpx 0;
}

.info2_img {
  width: 124rpx;
  height: 124rpx;
  margin-right: 26rpx;
  margin-left: 26rpx;
}

.info2_center {
  width: 462rpx;
  display: flex;
  flex-direction: column;
}

.info2_center>view:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(51, 51, 51, 1);
}

.info2_center>view:nth-child(2) {
  width: fit-content;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  font-size: 20rpx;
  font-weight: 400;
  line-height: 28rpx;
  color: rgba(153, 153, 153, 1);
  background: rgba(238, 238, 238, 1);
  margin: 20rpx 0;
}

.info2_center>view:nth-child(3) {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.info2_center>view:nth-child(3)>.center_text1 {
  font-size: 32rpx;
  font-weight: 400;
  line-height: 44px;
  color: rgba(44, 52, 57, 1);
  opacity: 1;
}

.center_view>text:nth-child(1) {
  width: 34rpx;
  height: 34rpx;
  text-align: center;
  line-height: 34rpx;
  background: rgba(238, 238, 238, 1);
  border: 1rpx solid rgba(204, 204, 204, 1);
  border-radius: 2rpx 0rpx 0rpx 2rpx;
  opacity: 1;
}

.center_view>text:nth-child(2) {
  width: 54rpx;
  height: 34rpx;
  text-align: center;
  line-height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  margin: 0 10rpx;
}

.center_view>text:nth-child(3) {
  width: 34rpx;
  height: 34rpx;
  text-align: center;
  line-height: 34rpx;
  background: rgba(238, 238, 238, 1);
  border: 1rpx solid rgba(204, 204, 204, 1);
  border-radius: 2rpx 0rpx 0rpx 2rpx;
  opacity: 1;
}
