  background: #fafafa;
  box-sizing: border-box;
}

.con {
  width: 710rpx;
  /* min-height: 148rpx; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 12rpx rgba(0, 0, 0, 0.03);
  border-radius: 12rpx;
  box-sizing: border-box;
  padding: 24rpx 20rpx;
  margin-bottom: 20rpx;
}

.top {
  min-height: 148rpx;
  font-size: 28rpx;
