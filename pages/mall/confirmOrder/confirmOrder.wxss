/* pages/mall/confirmOrder/confirmOrder.wxss */
page {
  padding: 20rpx;
  width: 750rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}

.wait_fa {
  height: 124rpx;
  text-align: center;
  line-height: 124rpx;
}

/* 公共样式 */

.common {
  width: 710rpx;
  box-shadow: 0px 2rpx 12rpx rgba(0, 0, 0, 0.03);
  background: rgba(255, 255, 255, 1);
  border-radius: 12rpx;
  opacity: 1;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

/* 时间 */

.wait_pay {
  display: flex;
  height: 142rpx;
  margin-bottom: 20rpx;
  flex-direction: column;
  justify-content: space-around;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.wait_pay .p1 {
  display: flex;
  align-items: center;

}

.wait_pay .p1 text {
  font-weight: bold;
  font-size: 28rpx;
  color: #666666;
  margin-right: 10rpx;
}

.wait_pay .p1 .item {
  font-size: 32rpx;
  color: #f12a2a;
}

.wait_pay .p2 {
  display: flex;
  align-items: center;
}

.wait_pay .p2 text:nth-child(1) {
  font-size: 28rpx;
  color: #333;
}

.wait_pay .p2 text:nth-child(2) {
  font-size: 28rpx;
  color: #e11a1a;
}

/*物流信息*/

.wait_info {
  padding: 22rpx 14rpx;
  box-sizing: border-box;
}

.wait_info .info1 {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.wait_info .info1  .img {
  width: 47rpx;
  height: 37rpx;
  margin-right: 18rpx;
}

.info1 .info1_right {
  float: right;
}

.info1>text:nth-child(3) {
  color: #4093ee;
  margin-left: 10rpx;
}

.wait_info .info2 {
  display: flex;
  text-align: center;
}

/* 收货人 */

.coupons {
  width: 710rpx;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.coupons .c_type {
  height: 120rpx;
  border-bottom: 2rpx solid #bbb;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.c_type>view:nth-child(1) {
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

.c_type>view:nth-child(2) {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  box-sizing: border-box;
}

.c_address {
  height: 82rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}

.c_address>view:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

/* 店铺信息 */

.shop_info {
  /* height: 246rpx; */
  padding: 22rpx 14rpx;
  box-sizing: border-box;
}

.shop_info .info1 {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.shop_info .info1 text {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.shop_info .info1 image {
  width: 31rpx;
  height: 31rpx;
  margin-right: 16rpx;
}

.shop_info .info2 {
  margin-top: 28rpx;
  display: flex;
  align-items: center;
}

.info2_img {
  width: 170rpx;
  height: 170rpx;
  margin-right: 26rpx;
}

.info2_center {
  width: 462rpx;
}

.info2_center>view:nth-child(1) {
  height: 80rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 40rpx;
  color: rgba(51, 51, 51, 1);
}

.info2_center>view:nth-child(2) {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info2_center>view:nth-child(2)>.center_text1 {
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 400;
  background: rgba(238, 238, 238, 1);
  color: rgba(153, 153, 153, 1);
}

.info2_center>view:nth-child(2)>.center_text2 {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #bbb;
}

.info2_center>view:nth-child(3) {
  margin-top: 14rpx;
  float: right;
}

.shop_info .info3 {
  height: 82rpx;
  border-top: 1rpx solid rgba(187, 187, 187, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 26rpx;
}

.info3_left {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-right: 1rpx solid rgba(187, 187, 187, 1);
}

.info3_right {
  width: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 订单信息 */

.order_info {
  padding: 24rpx 20rpx;
}

.order_info .r1 {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.order_info .r2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
}

.order_info .r2 text:nth-child(1) {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  letter-spacing: 2rpx;
}

.order_info .r2 text:nth-child(2) {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
}

.bgview {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.bgview text:nth-child(1) {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-right: 28rpx;
}

.bgview text:nth-child(2) {
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #2c3439;
}

.bgview text:nth-child(3) {
  height: 44rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #ff3636;
}

/* 支付 */

.btn {
  width: 750rpx;
  height: 78rpx;
  opacity: 1;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.btn .v_btn {
  width: 144rpx;
  height: 52rpx;
  border: 1rpx solid rgba(204, 204, 204, 1);
  opacity: 1;
  border-radius: 8rpx;
  line-height: 52rpx;
  text-align: center;
  margin: 24rpx 20rpx;
  color: #666;
}

.active {
  color: rgba(255, 255, 255, 1);
  background: #fcce06;
}
