/* pages/mall/store/store_discount/store_discount.wxss */

page {
  padding: 0 20rpx;
  box-sizing: border-box;
}

.top {
  padding-left: 20rpx;
  margin-top: 24rpx;
  width: 690rpx;
  height: 140rpx;
  background: linear-gradient(84deg, rgba(95, 104, 110, 1) 0%, rgba(69, 80, 87, 1) 100%);
  box-shadow: 0px 6rpx 16rpx rgba(180, 180, 180, 0.09);
  border-radius: 8rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.top view{
  height: 140rpx;
  line-height: 140rpx;
  display: flex;
  align-items: center;
}
.top image {
  width: 12rpx;
  height: 22rpx;
}

.top .shop_img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.top text {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  letter-spacing: 2rpx;
}

.shop_name {
  font-weight: bold;
  margin: 0 160rpx 0 20rpx;
}

/* 优惠券列表 */

/* background-image: url('https://apitest.xgscheng.com/static/weapp/youhuibei.png'); */

.disconut {
  /* width: 710rpx; */
}

.disconut_item {
  position: relative;
  width: 710rpx;
  height: 160rpx;
  background-image: url('https://apitest.xgscheng.com/static/weapp/youhui2.png');
  background-size: 710rpx 166rpx;
}

.price {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 150rpx;
}

.price_left {
  margin: 0 16rpx 0 70rpx;
  color: #e11a1a;
  font-size: 20rpx;
}

.price_right {
  display: flex;
  flex-direction: column;
  color: #ce2041;
  font-size: 20rpx;
}
.price .manjian{
  height: 28rpx;
  width: 104rpx;
  line-height: 28rpx;
  text-align: center;
  background: url('https://apitest.xgscheng.com/static/weapp/manjian.png') no-repeat,#999;
  background-size: 104rpx 28rpx;
  color: #fff;
  font-size: 16rpx;
  display: block;
  margin: 4rpx 0;
  border-radius: 16rpx;
}
.price_right text:nth-child(3){
  color: #B92654;
  font-size: 16rpx;
}

/* 过期 */
.due{
  color:#999 !important;
}
.due2{
  background-image: none !important;
}
.liji {
  width: 152rpx;
  height: 56rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN;
  text-align: center;
  line-height: 56rpx;
  color: rgba(255, 255, 255, 1);
  letter-spacing: 2rpx;
  background-image: url('https://apitest.xgscheng.com/static/weapp/liji.png');
  background-size: 152rpx 56rpx;
  position: absolute;
  top: 50rpx;
  right: 34rpx;
}
