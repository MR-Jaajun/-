/* pages/mall/store/store.wxss */

page {
  background: #f8f8f8;
}

.store_top {
  width: 750rpx;
  height: 323rpx;
  margin-top: 127rpx;
  padding-top: 50rpx;
  box-sizing: border-box;
  position: relative;
}

/* 返回按钮 */

.backBtn {
  position: absolute;
  top: 68rpx;
  left: 32rpx;
  z-index: 100;
}

.backBtn image {
  width: 24rpx;
  height: 40rpx;
}
.backBtn {
  padding: 0 10rpx;
  width: 140rpx;
  height: 50rpx;
  border: 2rpx solid #999;
  border-radius: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.backBtn .x {
  height: 30rpx;
  border: 2rpx solid #f1eaea;
  margin: 0 24rpx;
}

.backBtn .meau {
  width: 30rpx;
  height: 30rpx;
}
.backBtn .meauList{
  position: fixed;
  width: 248rpx;
  height: 276rpx;
  top: 260rpx;
  left: 224rpx;
  /* margin-left: -130rpx; */
  border-radius: 10rpx;
}
.backBtn .meauList .m_list{
  width: 248rpx;
  height: 66rpx;
  display: flex;
  align-items: center;
  background: #fff;
  justify-content: flex-start;
}
.m_list text{
font-size:24rpx;
color:rgba(51,51,51,1);
letter-spacing:2rpx;

}
.backBtn .m_list image{
  width: 30rpx;
  height: 30rpx;
  margin: 0 24rpx 0 20rpx;
}
.store_bg image {
  position: absolute;
  top: 0;
  margin-top: -1rpx;
  width: 750rpx;
  height: 425rpx;
  /* z-index: -1; */
  background: linear-gradient(180deg, rgba(12, 12, 12, 1) 0%, rgba(35, 35, 35, 1) 68%, rgba(149, 149, 149, 1) 100%);
}

/* 店铺信息 */

.store_info {
  padding: 0 32rpx;
  height: 100rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.left_top {
  margin-bottom: 12rpx;
}

.left_top image {
  transform: rotate(180deg);
  width: 12rpx;
  height: 22rpx;
  margin-left: 16rpx;
}

.left_bottom {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.left_bottom text {
  font-size: 24rpx;
  color: rgba(248, 248, 248, 1);
  letter-spacing: 2rpx;
}

.rate {
  margin: 0 36rpx 0 12rpx;
}

.store_info .right {
  width: 112rpx;
  height: 46rpx;
  border: 2rpx solid rgba(190, 188, 188, 1);
  border-radius: 26rpx;
  color: #f1eaea;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.store_info .right image {
  width: 22rpx;
  height: 26rpx;
  margin-right: 4rpx;
}

.store_info .store_name {
  color: #fff;
  font-weight: bold;
  font-size: 36rpx;
  letter-spacing: 2rpx;
}

/* 优惠券 */

.discount {
  position: absolute;
  width: 346rpx;
  height: 146rpx;
  bottom: 8rpx;
  background-image: url('https://apitest.xgscheng.com/static/weapp/youhuibei.png');
  background-size: 346rpx 146rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.discount view:nth-child(1) text {
  color: #e11a1a;
  font-size: 20rpx;
}

.discount view:nth-child(1) {
  margin: 0 6rpx 0 38rpx;
}

.discount view:nth-child(2) {
  width: 104rpx;
}

.discount view:nth-child(2) text {
  color: #ce2041;
  font-size: 20rpx;
  display: block;
}

.discount view .manjian {
  height: 28rpx;
  line-height: 28rpx;
  background-image: url('https://apitest.xgscheng.com/static/weapp/manjian.png');
  background-size: 104rpx 28rpx;
  color: #fff !important;
  font-size: 16rpx !important;
  text-align: center;
  z-index: 100;
}

.d1 {
  left: 26rpx;
}

.d2 {
  right: 26rpx;
}

/* 搜索 */

.search {
  /* width: 750rpx; */
  height: 58rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid rgba(204, 204, 204, 1);
  border-bottom: 2rpx solid rgba(204, 204, 204, 1);
  padding: 0 60rpx;
  background: #fff;
}

.search>view {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}



/* 店铺商品 */

.recommend {
  padding: 0 20rpx;
  height: 100%;
}

.r_con {
  height: 100%;
  padding-top: 20rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.r_item {
  width: 334rpx;
  height: 472rpx;
  margin-bottom: 16rpx;
  background: #fff;
  box-shadow: 0 6rpx 16rpx rgba(180, 180, 180, 0.09);
  border-radius: 8rpx;
}

.r_item image {
  width: 334rpx;
  height: 334rpx;
  background: #58bc58;
  border-radius: 8rpx 8rpx 0 0;
}

.r_item .goods_title {
  display: block;
  text-align: center;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 14rpx;
}

.r_item .goods_price {
  height: 56rpx;
  line-height: 56rpx;
}

.goods_price text:nth-child(1) {
  color: #e11a1a;
  font-size: 44rpx;
  margin-left: 14rpx;
  margin-right: 36rpx;
}

.goods_price text:nth-child(2) {
  color: #666;
  font-size: 24rpx;
}

/* 分类 */
.fenlei{
  height: 500rpx;
}
