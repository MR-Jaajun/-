/* pages/mall/store/impression/impression.wxss */

.store_info {
  padding: 0 32rpx;
  height: 160rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid rgba(241, 236, 236, 1);
}

.store_img image {
  width: 96rpx;
  height: 96rpx;
  border-radius: 8rpx;
  background-color: #58bc58;
}

.left_top {
  /* margin-bottom: 0rpx; */
}

.left_top image {
  transform: rotate(180deg);
  width: 12rpx;
  height: 22rpx;
  margin-left: 16rpx;
}

.left_bottom {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.left_bottom text {
  font-size: 24rpx;
  color: #333;
  letter-spacing: 2rpx;
}

.rate {
  margin: 0 18rpx 0 10rpx;
}

.store_info .right {
  width: 112rpx;
  height: 46rpx;
  border: 2rpx solid rgba(190, 188, 188, 1);
  border-radius: 26rpx;
  color: #666;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.store_info .right image {
  width: 22rpx;
  height: 26rpx;
  margin-right: 4rpx;
}

.store_info .store_name {
  color: #333;
  font-weight: bold;
  font-size: 36rpx;
  letter-spacing: 2rpx;
}

/* 评分 */

.pingfen {
  padding: 30rpx 32rpx;
  width: 686rpx;
  height: 200rpx;
  border-bottom: 2rpx solid rgba(241, 236, 236, 1);
}

.rate_item {
  height: 66rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.pingfen .rate_item text {
  float: left;
  font-size: 28rpx;
  line-height: 66rpx;
  margin-right: 12rpx;
  color: #333;
  letter-spacing: 2rpx;
}

.rate2 {
  margin-right: 70rpx;
}

/* 基本信息 */

.basic {
  padding: 30rpx 32rpx;
  width: 686rpx;
  height: 320rpx;
  border-bottom: 2rpx solid rgba(241, 236, 236, 1);
}

.b_title {
  font-size: 28rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
  margin-bottom: 28rpx;
}

.info_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 26rpx;
}

.info_item text {
  font-size: 28rpx;
  color: rgba(153, 153, 153, 1);
  letter-spacing: 2rpx;
}

.info_r {
  display: flex;
  align-items: center;
}

.info_r text {
  font-size: 24rpx;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
}

.info_r image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 12rpx;
}

/* 商家资质信息 */

.tips {
  padding: 30rpx 32rpx;
  width: 686rpx;
  height: 320rpx;
}

.tips image {
  width: 123px;
  height: 103px;
  background: rgba(204, 204, 204, 1);
}
