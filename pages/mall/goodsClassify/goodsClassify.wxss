/* pages/mall/goodsClassify/goodsClassify.wxss */

.category {
  width: 750rpx;
  height: 80rpx;
  background: linear-gradient(180deg, rgba(62, 72, 79, 1) 0%, rgba(49, 58, 63, 1) 100%);
  box-shadow: 0px 6px 22px rgba(41, 63, 100, 0.09);
}

.scroll-view_H {
  white-space: nowrap;
}

.border {
  display: inline-block;
  font-weight: bold;
  color: #fff;
  font-size: 28rpx;
  border-bottom: 2rpx solid #FFE2E2;
  height: 60rpx;
  line-height: 60rpx;
  margin: 0 44rpx;
  width: fit-content;
}

.title {
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  width: fit-content;
  font-size: 24rpx;
  margin: 0 44rpx;
  font-weight: 400;
  color: #fff;
}

.bg {
  background: #3e484f;
}

.bg .van-ellipsis {
  font-size: 24rpx;
  color: #f1ecec;
}

.bg2 .van-ellipsis {
  color: #fff;
  font-weight: bold;
  font-size: 28rpx;
  letter-spacing: 2rpx;
}

.van-tabs__nav {
  border: 0 !important;
  /* height: 108rpx !important; *//* background-color: none !important; */
}

.van-tab {
  border-right: 0 !important;
}

.goodsList {
  display: flex;
  /* justify-content: space-around; *//* align-items: center; */
  width: 750rpx;
  height: 340rpx;
  padding: 24rpx 32rpx 24rpx 32rpx;
  border-bottom: 2rpx solid #f1ecec;
  box-sizing: border-box;
}

.goodsList .goods_img {
  margin-right: 32rpx;
  width: 294rpx;
  height: 294rpx;
  border-radius: 10rpx;
  background: #58bc58;
}

.goodsinfo {
  height: 264rpx;
  width: 360rpx;
}

.goodsinfo view:nth-child(1) {
  font-size: 30rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.goodsinfo view:nth-child(2) {
  font-size: 24rpx;
  color: rgba(51, 51, 51, 1);
  margin: 22rpx 0 30rpx 0;
}

.goodsinfo view:nth-child(3) text, .goodsinfo view:nth-child(4) text {
  font-size: 24rpx;
  color: #999;
}

.goodsinfo view:nth-child(4) image {
  width: 10rpx;
  height: 16rpx;
}
