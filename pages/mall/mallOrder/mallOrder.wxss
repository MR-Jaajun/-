.page {
  background: #fafafa;
}

/* 无数据 */
.v-content {
  width: 750rpx;
  height: 798rpx;
  display: flex;
  position: relative;
}

.v-top {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.image-center {
  width: 230rpx;
  height: 230rpx;
}

.v-font {
  height: 14rpx;
  font-size: 10px;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 14rpx;
  color: rgba(153, 153, 153, 1);
}

.hasmore {
  margin-top: 10rpx;
  text-align: center;
}

/* 有数据 */
.goodsList {
  width: 710rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px -2rpx 12rpx rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  margin: 20rpx auto 0 auto;
  padding: 22rpx 20rpx;
  box-sizing: border-box;
  position: relative;
}

.title {
  /* width: 710rpx; */
  display: flex;
  align-items: center;
  height: 38rpx;
  margin-bottom: 28rpx;
}

.title .icons {
  width: 30rpx;
  height: 30rpx;
  /* background: #ccc; */
}

.title .next {
  width: 15rpx;
  height: 25rpx;
}

.title text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  margin: 0 10rpx 0 16rpx;
}

.status {
  position: absolute;
  top: 24rpx;
  right: 30rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #ff3636;
}

.goodsinfo {
  height: 140rpx;
  width: 100%;
  position: relative;
  display: flex;
  justify-content: flex-start;
}

.goodsinfo image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
}

.goodsinfo .right_div {
  flex: 1;
}

.goodsinfo .right_div .sku {
  display: flex;
  justify-content: space-between;
}

.goodsinfo .right_div .sku text:nth-child(1) {
  background: rgba(238, 238, 238, 1);
  color: rgba(153, 153, 153, 1);
  font-size: 20rpx;
  line-height: 28rpx;
}

.goodsinfo .right_div .sku text:nth-child(2) {
  color: rgba(153, 153, 153, 1);
  font-size: 20rpx;
}

.goodsinfo .name {
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-family: PingFang SC;
  font-weight: 400;
}

.goodsinfo .name text:nth-child(1) {
  font-size: 28rpx;
  letter-spacing: 2rpx;
  color: rgba(51, 51, 51, 1);
}

.goodsinfo .name text:nth-child(2) {
  font-size: 24rpx;
  color: #666;
  letter-spacing: 2rpx;
}

.goodsinfo .price {
  position: absolute;
  right: 0rpx;
  bottom: 0;
}

.goodsinfo .price text:nth-child(1) {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  margin-right: 34rpx;
}

.goodsinfo .price text:nth-child(2) {
  font-size: 24rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.btn {
  display: flex;
  justify-content: flex-end;
  margin-top: 28rpx;
  /* z-index: 20; */
}

.btn2 {
  display: flex;
}

.active {
  color: #666 !important;
  width: 144rpx;
  height: 52rpx;
  letter-spacing: 2rpx;
  font-size: 22rpx;
  margin-left: 20rpx;
}

.item2 {
  background: #fcce06;
}

.btn .btn_item {
  width: 144rpx;
  height: 52rpx;
  border: 1px solid rgba(204, 204, 204, 1);
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  border-radius: 26rpx;
  text-align: center;
  line-height: 52rpx;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
}
