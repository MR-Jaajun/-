/* pages/group/refund/refund.wxss */

page {
  padding: 20rpx;
  background: #f8f8f8;
  box-sizing: border-box;
}

.con {
  width: 710rpx;
  /* height: 162rpx; */
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 12rpx rgba(0, 0, 0, 0.03);
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  padding: 24rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 162rpx;
}

.title {
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 50rpx;
  color: rgba(51, 51, 51, 1);
}

.cause {
  padding: 20rpx 0 0 0;
}
.order {
  padding: 20rpx 0 0 0;
}
.cause1{
  padding: 0 24rpx;
  box-sizing: border-box;
  margin-bottom: 24rpx;
}
.btn {
  width: 750rpx;
  height: 74rpx;
  position: fixed;
  left: 0;
  bottom: 0;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 1);
  background: linear-gradient(243deg, rgba(44, 52, 57, 1) 0%, rgba(63, 73, 80, 1) 100%);
  letter-spacing: 2rpx;
  text-align: center;
  line-height: 74rpx;
}

.value-class {
  flex: none !important;
}
