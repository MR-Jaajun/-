/* pages/group/group.wxss */

page {
  background: rgba(248, 248, 248, 1);
}

.top_bar {
  width: 100%;
  /* padding: 0 32rpx; */
  display: flex;
  align-items: center;
  background: #fff;
  color: #fff;
  justify-content: space-around;
  /* box-sizing: border-box; *//* padding-bottom:50rpx; */
}

.top_bar image {
  width: 36rpx;
  height: 40rpx;
}

/* 轮播 */

.hot {
  padding: 0 20rpx;
}

.hot text {
  font: bold 28rpx Arial;
  letter-spacing: 2rpx;
}

.hot swiper {
  height: 212rpx;
  margin-top: 20rpx;
}

.hot swiper image {
  border-radius: 10rpx;
  width: 100%;
}

/* 导航 */

.nav {
  /* height: 164rpx; */
  margin-top: 24rpx;
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.nav_item {
  display: flex;
  width: 20%;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.nav_item image {
  width: 72rpx;
  height: 72rpx;
  margin-bottom: 10rpx;
}

.nav_item text {
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(51, 51, 51, 1);
}

/* 拼团专区 */

.recommend {
  padding: 0 20rpx;
  margin-top: 30rpx;
  background: rgba(250, 250, 250, 1);
  height: 100%;
}

.r_tit {
  width: 710rpx;
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
}

.r_tit>.title_img {
  position: relative;
  top: 15rpx;
  width: 273rpx;
  height: 17rpx;
  font-weight: bold;
  font-style: oblique;
  color: red;
}

.i {
  display: block;
  width: 34px;
  height: 2px;
  background: red;
  border-radius: 1px;
  margin-top: 1px;
}

.r_tit .more {
  height: 80rpx;
  width: 130rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.more>text {
  color: rgba(153, 153, 153, 1);
  font-size: 24rpx;
}

.more>image {
  width: 14rpx;
  height: 24rpx;
}

/***拼团专区商品展示 ***/

.clearfix::after {
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}

.scroll-x {
  width: 100%;
  height: 216rpx;
  display: flex;
}

.v_box {
  margin: 20rpx;
  display: inline-flex;
  width: 396rpx;
  height: 196rpx;
  background: #fff;
}

.img {
  width: 156rpx;
  height: 156rpx;
  background: #999;
  border-radius: 4rpx;
  margin: 17rpx;
  float: left;
}

.title {
  font-weight: bold;
  height: 74px;
  line-height: 74px;
  margin: 0;
}

.toptxt {
  width: 190rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: rgba(51, 51, 51, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.middletxt {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 34rpx;
}

.middletxt2 {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 17rpx;
}

.txt1 {
  width: 64rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(225, 26, 26, 1);
  margin-right: 18rpx;
}

.price1 {
  font-size: 32rpx;
  color: #f95d5d;
  font-weight: 400;
  line-height: 44rpx;
}

.txt2 {
  height: 32rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(102, 102, 102, 1);
  margin-right: 10rpx;
}

.price2 {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  font-weight: 400;
  line-height: 44rpx;
}

/* 附近商家 */

.near_shop {
  margin-top: 20rpx;
  padding: 20rpx;
}

/* 双人套餐 */

.scroll-y {
  width: 750rpx;
}

.home_item {
  width: 710rpx;
  height: 352rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 2rpx 12rpx rgba(0, 0, 0, 0.03);
  margin: 0 20rpx;
  padding: 20rpx;
  box-sizing: border-box;
}

.home_item .one_txt {
  font-size: 32rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: space-between;
}

.home_item .one_txt image {
  width: 32rpx;
  margin-right: 6rpx;
}

.home_item .one_txt image.close {
  width: 30rpx;
}

.home_item .two_txt {
  font-size: 22rpx;
  color: #666;
}

.home_item .two_txt .redtxt {
  color: #fc4f3d;
  margin-right: 15rpx;
}

.home_item .three_txt {
  font-size: 22rpx;
  color: #666;
}

.home_item .three_txt .redbgtxt {
  background-color: #67affb;
  padding: 0 10rpx;
  margin-right: 4rpx;
  color: #fff;
  border-radius: 4rpx;
}

.home_item .four_txt {
  color: #666;
  font-size: 22rpx;
  border: 1px solid rgba(208, 207, 207, 1);
  padding: 4rpx;
  border-radius: 4rpx;
}

.home_item .five_img {
  width: fit-content;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-around;
}

.home_item .five_img image {
  width: 218rpx;
  height: 148rpx;
  background: #999;
  border-radius: 4rpx;
  margin-right: 5rpx;
}

.zhezhao {
  width: 750rpx;
  background: rgba(210, 204, 204, 0.5);
  z-index: 99;
  position: fixed;
  left: 0;
  top: 0;
}

.meauList {
  width: 168rpx;
  border-radius: 26rpx;
  border: 2rpx solid rgba(210, 204, 204, 1);
  box-shadow: 0px 6rpx 24rpx rgba(0, 0, 0, 0.06);
  background: #fff;
  position: absolute;
  /* top: 50rpx; */
  z-index: 100;
}

.meauList .m_list {
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
}

.meauList .m_list:nth-child(2) {
  /* border-bottom: 2rpx solid #f1ecec; */
  border-top: 2rpx solid #f1ecec;
}

.m_list text {
  font-size: 24rpx;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
}
