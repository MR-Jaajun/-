/* pages/group/orderDetial/orderDetial.wxss */

page {
  padding: 20rpx;
  width: 750rpx;
  box-sizing: border-box;
  background: #f8f8f8;
}

/* 公共样式 */

.common {
  width: 710rpx;
  box-shadow: 0px 2rpx 12rpx rgba(0, 0, 0, 0.03);
  background: rgba(255, 255, 255, 1);
  border-radius: 12rpx;
  opacity: 1;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}

/* 时间 */

.wait_pay {
  display: flex;
  height: 40rpx;
  margin-bottom: 20rpx;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.wait_pay .p1 {
  display: flex;
  align-items: center;
}

.wait_pay .p1 image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.wait_pay .p1 text {
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
  margin-right: 10rpx;
}

.wait_pay .p2 {
  display: flex;
  align-items: center;
}

.wait_pay .p2 text:nth-child(1) {
  font-size: 24rpx;
  color: #333;
}

.wait_pay .p2 text:nth-child(2) {
  font-size: 24rpx;
  color: #e11a1a;
}

/* 标题 */

.top {
  height: 208rpx;
  padding: 24rpx 20rpx;
  position: relative;
  display: flex;
}

.top image {
  width: 156rpx;
  height: 156rpx;
  border-radius: 8rpx;
  background: #ccc;
  margin-right: 20rpx;
}

.top .top_info {
  height: 156rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-family: PingFang SC;
}

.top_info text:nth-child(1) {
  font-size: 36rpx;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
}

.top_info text:nth-child(2) {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
}

.top_info text:nth-child(3) {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  letter-spacing: 2rpx;
}

.top .price {
  position: absolute;
  top: 32rpx;
  right: 20rpx;
  color: #e11a1a;
  font-size: 32rpx;
}

.pink {
  height: 132rpx;
  position: relative;
}

.pinks {
  position: absolute;
  left: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: rgba(241, 42, 42, 1);
}

.pink .icons {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}

.userImg {
  width: fit-content;
  position: absolute;
  right: 60rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
}

.userImg image {
  width: 70rpx;
  height: 70rpx;
  background: #ccc;
  border-radius: 50%;
  margin: 0 27rpx;
}

/* 优惠券 */

.coupons {
  /* height: 324rpx; */
  padding: 18rpx 20rpx;
}

.coupons .c_type {
  height: 130rpx;
  border-bottom: 2rpx solid #bbb;
  margin-bottom: 26rpx;
  position: relative;
}

.c_type .c_name {
  margin-bottom: 26rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.c_type .c_name image {
  width: 47rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.c_type .c_time {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
}

.c_type .tuikuan {
  position: absolute;
  width: 144rpx;
  height: 52rpx;
  background: rgba(252, 206, 6, 1);
  border-radius: 52rpx;
  text-align: center;
  line-height: 52rpx;
  color: #333;
  font-size: 24rpx;
  right: 20rpx;
  bottom: 18rpx;
}

.coupons .c_info {
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
  letter-spacing: 2rpx;
  margin-bottom: 10rpx;
}

.coupons .c_info image {
  height: 50rpx;
  width: 50rpx;
}

.coupons .c_info .c_txt {
  font-size: 24rpx;
  color: #666;
}

/* 商品信息 */

.detail {
  /* height: 350rpx; */
  padding: 18rpx 20rpx;
  position: relative;
}

.detail .d_title {
  display: flex;
  align-items: center;
  margin-bottom: 26rpx;
}

.detail .d_title image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.detail .d_title text {
  color: #3092f9;
  font-size: 30rpx;
  font-weight: bold;
}

.d_con {
  margin-bottom: 20rpx;
}

.d_con .c_title {
  display: flex;
  align-items: center;
}

.d_con .c_title image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.d_con .c_title text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.d_con .list {
  height: 52rpx;
  padding: 0 20rpx 0 36rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.d_con .list text:nth-child(1) {
  font-size: 24rpx;
  color: #333;
}

.d_con .list text:nth-child(2) {
  font-size: 28rpx;
  color: #e11a1a;
}

.detail .loadmore {
  position: absolute;
  bottom: 0;
  width: 666rpx;
  height: 74rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border-top: 2rpx solid #f1ecec;
  font-size: 24rpx;
  color: #999;
}

/* 店铺信息 */

.shop_info {
  /* height: 246rpx; */
  padding: 22rpx 14rpx;
  box-sizing: border-box;
}

.shop_info .info1 {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.shop_info .info1 text {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.shop_info .info1 image {
  width: 31rpx;
  height: 31rpx;
  margin-right: 16rpx;
}

.shop_info .info2 {
  display: flex;
  align-items: center;
}

.shop_info .info2 text {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  display: block;
  width: 610rpx;
  margin-left: 26rpx;
  padding: 28rpx 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #bbb;
  letter-spacing: 2rpx;
}

.shop_info .info3 {
  display: flex;
  align-items: center;
}

.shop_info .info3 text {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  margin-left: 26rpx;
  padding: 24rpx 0;
  box-sizing: border-box;
  letter-spacing: 2rpx;
}

/* 使用规则 */

.rule {
  height: 606rpx;
  padding: 24rpx 20rpx;
}

.rule text {
  display: block;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 50rpx;
  color: rgba(102, 102, 102, 1);
  letter-spacing: 2rpx;
}

.rule .r1 text:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 30px;
  color: rgba(51, 51, 51, 1);
}

/* 订单信息 */

.order_info {
  padding: 24rpx 20rpx;
}

.order_info .r1 {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(51, 51, 51, 1);
}

.order_info .r2 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 70rpx;
}

.order_info .r2 text:nth-child(1) {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
  letter-spacing: 2rpx;
}

.order_info .r2 text:nth-child(2) {
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
}

/* 支付 */

.btn {
  width: 750rpx;
  height: 78rpx;
  background: linear-gradient(270deg, rgba(65, 148, 238, 1) 0%, rgba(88, 162, 240, 1) 100%);
  opacity: 1;
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  line-height: 78rpx;
}

.btn text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin: 0 12rpx;
}

.btn2 {
  width: 750rpx;
  height: 78rpx;
  background: linear-gradient(270deg, rgba(48, 54, 57, 1) 0%, rgba(70, 77, 83, 1) 100%);
  position: fixed;
  bottom: 0;
  left: 0;
  text-align: center;
  line-height: 78rpx;
}

.btn2 text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin: 0 12rpx;
}

/* 弹窗 */

.all {
  width: 750rpx;
  height: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.all .shu_codebox {
  width: 600rpx;
  height: 150rpx;
  margin: 0 auto;
}

.all .er_code {
  width: 500rpx;
  height: 500rpx;
  margin: -12rpx auto 0 auto;
}

.btn3 {
  width: 750rpx;
  height: 78rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
}

.btn3 view {
  width: 50%;
  height: 78rpx;
  font-size: 32rpx;
  text-align: center;
  line-height: 78rpx;
  letter-spacing: 2rpx;
}

.btn3 view:nth-child(1) {
  background: linear-gradient(270deg, rgba(48, 54, 57, 1) 0%, rgba(70, 77, 83, 1) 100%);
  color: #fff;
}

.btn3 view:nth-child(2) {
  background: #fcce06;
  color: #333;
}
