page{
  background:rgba(250,250,250,1);
}
.address{
  width: 100%;
  height: 100%;
  overflow-y: auto;
}
.address_item{
  width: 686rpx;
  height: 108rpx;
  position: relative;
  padding: 32rpx 32rpx 0 32rpx;
}
.address_item image{
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 36rpx;
}
.userinfo{
  margin-bottom: 8rpx;
  font-size: 28rpx;
  color: #333333;
}
/* 详细地址 */
.address_info{
  height:24rpx;
  font-size:24rpx;
  font-family:PingFang SC;
  font-weight:400;
  color:rgba(102,102,102,1);
}

/* 新增收货地址 */
.address_btn{
  width:670rpx;
  margin-top:70rpx;
  margin-bottom: 20rpx; 
  background:linear-gradient(94deg,rgba(70,78,83,1) 0%,rgba(52,58,62,1) 100%);
  font-size:32rpx;
  border-radius: 46rpx;
}