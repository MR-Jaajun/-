/* pages/mine/withdraw/withdraw_money.wxss */

page {
  height: 100%;
  background: rgba(250, 250, 250, 1);
  padding: 28rpx 0rpx 0 20rpx;
}

.withdraw {
  width: 710rpx;
  height: 340rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 5px rgba(160, 157, 157, 0.04);
  border-radius: 4px;
  display: flex;
  flex-direction: column;
}
/* 银行卡 */
.bank_card,.can_withdraw{
  height: 76rpx;
  line-height: 76rpx;
  padding: 0 28rpx 0 20rpx;
}
.bank_card .card_left{
  font-size:24rpx;
  color:rgba(51,51,51,1);
  float: left;
}
.bank_card .card_right{
  float: right;
  font-size:24rpx;
  color:rgba(102,102,102,1);
}
.card_right image{
  width: 12rpx;
  height: 22rpx;
  margin-left: 20rpx;
  vertical-align: middle;
}
.withdraw_money{
  flex: 1;
  width: 100%;
  border-top:1px solid rgba(248,246,246,1); 
  border-bottom:1px solid rgba(248,246,246,1); 
  padding:6rpx 0 0 20rpx; 
}
/* 全部提现 */
.can_withdraw view:nth-child(1){
  float: left;
}
.can_withdraw view:nth-child(1) text{
  font-size:24rpx;
  color: #666666;
}
.can_withdraw view:nth-child(1) text:nth-child(2){
  font-size:28rpx;
  margin-left: 12rpx;
}

.can_withdraw view:nth-child(2){
  float: right;
  color: #666666;
  font-size:24rpx;
}

/* 提现金额 */
.withdraw_money view:nth-child(1){
  line-height: 106rpx;
  font-size:24rpx;
  color:rgba(51,51,51,1);
}
.withdraw_money view:nth-child(2) input{
  color:rgba(255,54,54,1);
  font-size:28rpx;
  display: inline-block;
  vertical-align: middle;
}
.withdraw_money view:nth-child(2) text{
  margin-right: 30rpx;
  color:rgba(255,54,54,1);
  font-size:36rpx;
  vertical-align: middle;
}

/* 提交按钮 */
.submit_btn{
  width:494rpx;
  height:80rpx;
  background:linear-gradient(94deg,rgba(63,73,80,1) 0%,rgba(44,52,56,1) 100%);
  box-shadow:0px 3px 6px rgba(0,0,0,0.05);
  border-radius:66rpx;
  margin: 142rpx 0 0 108rpx;
  line-height: 80rpx;
  text-align: center;
  color:rgba(255,255,255,1);
  font-size:28rpx;
}



/* 银行卡弹窗 */
.show_cards{
  text-align: center;
  width: 670rpx;
}
.show_cards .c_item,.show_cards .add_cards{
  width: 670rpx;
  height: 62rpx;
  line-height: 62rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  padding: 20rpx 0 22rpx 0;
  border-bottom: 2rpx solid rgba(248, 246, 246, 1);
}
.show_cards .title{
  height: 82rpx;
  font-size:28rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(102,102,102,1);
  line-height: 82rpx;
  border-bottom: 2rpx solid rgba(248, 246, 246, 1);
}