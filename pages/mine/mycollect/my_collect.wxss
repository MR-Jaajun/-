.top{
  height: 90rpx;
  background:#3F4950;
  padding: 0 34rpx 0 32rpx; 
  line-height: 90rpx;
}
.top text{
  color:rgba(255,255,255,1);
  font-family:PingFang SC;
}

/* 收藏的商品列表 */
.shop_item{
  width: 680rpx;
  height: 224rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 34rpx 0 36rpx;
}
.shop_item .shop_photo{
  width:188rpx;
  height:160rpx;
  background: #58bc58;
  border-radius:8rpx;
}
.shop_photo image{
  width:188rpx;
  height:160rpx;
  border-radius:8rpx;
}
.shop_item .shop_info{
  flex: 1;
  width: 292rpx;
  height: 172rpx;
  padding: 52rpx 0 0 18rpx;
}
.shop_item .shop_icon{
  width:32rpx;
  height:32rpx;
  vertical-align: middle;
}
.shop_item .shop_info .shop_title text{
  margin-left: 6rpx;
  font-size:30rpx;
  font-family:PingFang SC;
  font-weight:bold;
  color:rgba(51,51,51,1);
  vertical-align: middle;
}
.shop_info .shop_price text{
  font-size:40rpx;
  font-family:DINPro;
  color:rgba(255,54,54,1);
}
.shop_info .shop_price text:nth-child(1){
  font-size:32rpx;
}
.shop_item .next{
  width:12rpx;
  height:22rpx;
}
/* 商家的收藏 */
.merchant_list{
  padding: 0 34rpx 0 36rpx;
}