/* pages/mine/service/complain/complain_info/complain_info.wxss */
page{
  background:rgba(250,250,250,1);
  font-size: 28rpx;
}
/* 商家的名称和订单号 */
.top{
  width: 710rpx;
  height: 220rpx;
  background: #FFF;
  padding: 0 20rpx;
}
.top .name{
  height: 116rpx;
  line-height: 116rpx;
  border-bottom: 1px solid rgba(249,251,245,1);
}
.top .order_num{
  height: 104rpx;
  line-height: 104rpx;
}
.top .name text:nth-child(1),.top .order_num text:nth-child(1){
  text-align: right;
  display: inline-block;
  width: 140rpx;
  height: 40rpx;
  color: #666666;
  margin-right: 20rpx;
}
.top .name text:nth-child(2),.top .order_num text:nth-child(2){
  color: #999999;
}

/* 需要投诉的问题 */
.problem{
  margin: 20rpx 0;
  padding: 0 20rpx;
  width: 710rpx;
  height: 330rpx;
  background: #FFF;
}

.problem .problem_top{
  height: 104rpx;
  line-height: 104rpx;
  border-bottom: 1px solid rgba(249,251,245,1);
}
.problem .problem_top .choose{
  float: right;
}
.problem .problem_top .choose image{
  width: 12rpx;
  height: 22rpx;
}
.problem .problem_bottom textarea{
  padding-top: 30rpx;
  width: 710rpx;
  height: 154rpx;
}

/* 上传照片 */
.photos{
  padding: 0 20rpx;
  width: 710rpx;
  height: 336rpx;  
  background: #FFF;
}
.photos .upload{
  width: 710rpx;
}
.weui-uploader__file{
  margin: 0rpx 18rpx;
}
.photos .upload .weui-uploader__files image{
  width: 200rpx;
  height: 206rpx;
  background: #F2F2F2;
  border-radius:12rpx;
}

/* 投诉人 */
.pop{
  padding: 0 20rpx;
  width: 710rpx;
  height: 190rpx;
  background: #FFF;
  margin-top: 20rpx;
}

.pop .name{
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1px solid rgba(249,251,245,1);
}
.pop .tel{
  height: 90rpx;
  line-height: 90rpx;
}
.pop .name text,.pop .tel text{
  vertical-align: middle;
}
.pop .name input,.pop .tel input{
  text-align: center;
  display: inline-block;
  vertical-align: middle;
}

/* 提交按钮 */
.btn{
  text-align: center;
  line-height: 74rpx;
  color: #FFFFFF;
  width:750rpx;
  height:74rpx;
  background:linear-gradient(243deg,rgba(44,52,57,1) 0%,rgba(63,73,80,1) 100%);
  position: fixed;
  bottom: 0;
}

