/* pages/mine/service/complain/complain.wxss */

page {
  background: rgba(248, 248, 248, 1);
  padding: 0 20rpx;
}

.tips {
  margin: 28rpx 0 22rpx 10rpx;
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
}

.order {
  width: 710rpx;
  height: 100%;
}
/* 订单 */
.order_item {
  padding: 20rpx;
  box-shadow: 0px 0px 10rpx rgba(235, 235, 235, 0.04);
  border-radius: 8rpx;
  width: 670rpx;
  height: 236rpx;
  background: #fff;
  position: relative;
}
/* 订单状态 */
.order_item .state {
  position: absolute;
  font-size: 24rpx;
  color: #666;
  top: 26rpx;
  right: 20rpx;
}
/* 订单价格 */
.order_item .money {
  position: absolute;
  bottom: 32rpx;
  right: 20rpx;
  font-size: 24rpx;
  letter-spacing: 1rpx;
}
/* 订单信息 */

.order_item .shop .name image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}
.order_item .shop .name text{
  font-weight:bold;
  font-size:28rpx;
  color: #333333;
  vertical-align: middle;
}
.order_item .shop .shop_info{
  width: 450rpx;
}
.order_item .shop .shop_info image{
  width: 120rpx;
  height: 102rpx;
  border-radius: 4rpx;
  margin-right: 18rpx;
  float: left;
  background: #ccc;

}
.order_item .shop .shop_info .title{
  color: #666666;
  font-size:24rpx;
  float: left;
}
.order_item .shop .shop_info .discount{
  float: left;
}
.order_item .shop .shop_info .discount view{
  display: inline;
  color: #F95D5D;
  font-size: 22rpx;
  border:1px solid rgba(249,93,93,0.6627450980392156);
  border-radius:8rpx;
  margin-right: 12rpx;
}
