/* 用户的钱 */

.money {
  width: 710rpx;
  height: 190rpx;
  margin: 34rpx 20rpx 44rpx 20rpx;
  background-image: url("https://apitest.xgscheng.com/static/weapp/mine_money_bg.png");
  background-size: cover;
}

.money text {
  color: rgba(255, 255, 255, 1);
  letter-spacing: 2rpx;
}

.accumulative_all {
  width: 100%;
  margin-top: 16rpx;
  text-align: center;
  height: 40rpx;
  float: left;
  margin-bottom: 22rpx;
}

.accumulative_all text {
  font-size: 28rpx;
  font-weight: bold;
  line-height: 52rpx;
}

.month {
  width: 50%;
  float: left;
  text-align: center;
}

.estimate {
  width: 50%;
  float: right;
  text-align: center;
}

.number text:nth-child(1) {
  margin-bottom: 14rpx;
  display: block;
  font-weight: 400;
  font-size: 24rpx;
}

/* 导航 */

.nav {
  display: flex;
  justify-content: space-around;
  height: 116rpx;
  overflow: hidden;
}

.nav>view {
  text-align: center;
  flex: 1;
  width: 96rpx;
  height: 116rpx;
  color: rgba(51, 51, 51, 1);
}

.nav>view image {
  width: 64rpx;
  height: 64rpx;
}

.nav>view text {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  letter-spacing: 2rpx;
}


.active>view text{
  color:#999;
}

/* 常用工具 */

.instrument {
  margin: 36rpx 34rpx 0 32rpx;
}

.instrument_title {
  width: 112rpx;
  height: 40rpx;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 40rpx;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 15rpx;
  margin-bottom: 32rpx;
}
