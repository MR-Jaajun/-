/*用户名称  */

.userinfo {
  position: relative;
}

#username {
  margin: 98rpx 0 8rpx 22rpx;
  height: 44rpx;
  position: relative;
}

.username {
  float: left;
  height: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  line-height: 44rpx;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 4rpx;
  margin-right: 16rpx;
}

.member_level {
  float: left;
  text-align: center;
  width: 110rpx;
  height: 34rpx;
  border: 1px solid rgba(246, 111, 48, 1);
  border-radius: 12px;
  line-height: 28rpx;
}

.member_level text {
  vertical-align: middle;
  font-size: 22rpx;
  color: rgba(245, 75, 48, 1);
}

.member {
  vertical-align: middle;
  width: 26rpx;
  height: 24rpx;
}

/* 邀请码 */

#invite_ID {
  margin: 0 0 20rpx 24rpx;
}

.invite_ID {
  width: 206rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  color: rgba(102, 102, 102, 1);
  letter-spacing: 2rpx;
  margin-right: 14rpx;
}

.copy {
  display: inline-block;
  width: 66rpx;
  height: 30rpx;
  font-size: 22rpx;
  font-family: PingFang SC;
  font-weight: 400;
  text-align: center;
  line-height: 28rpx;
  color: rgba(102, 102, 102, 1);
  letter-spacing: 2rpx;
  border-radius: 24rpx;
  border: 1px solid rgba(153, 153, 153, 1);
}

/* 升级提示 */

#upgrade {
  margin-left: 28rpx;
}

.upgrade {
  width: 478rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 24rpx;
  color: rgba(102, 102, 102, 1);
  letter-spacing: 2rpx;
  margin-right: 20rpx;
}

.next {
  width: 6px;
  height: 11px;
}

/* 用户照片 */

.userPicture {
  width: 374rpx;
  height: 270rpx;
  background-image: url("https://apitest.xgscheng.com/static/weapp/background.png");
  background-size: cover;
  position: absolute;
  top: -98rpx;
  right: 0;
  z-index: -99;
}

.userPicture image {
  width: 42rpx;
  height: 40rpx;
  position: absolute;
  top: 34rpx;
  right: 34rpx;
}

.user_picture {
  width: 120rpx;
  height: 120rpx;
  box-shadow: 0rpx 6rpx 12rpx rgba(0, 0, 0, 0.1);
  position: absolute;
  right: 32rpx;
  bottom: 52rpx;
  border-radius: 50%;
  background-size: cover;
}
