.instrument_item {
  position: relative;
  height: 100rpx;
  color: rgba(51, 51, 51, 1);
  /* line-height: 100rpx; */
}

.instrument_item .icon {
  width: 48rpx;
  height: 48rpx;
  vertical-align: middle;
  margin-right: 32rpx;
}

.instrument_item text {
  width: 96rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-weight: 400;
  line-height: 100rpx;
}
.active{
  color: #999;
}

.instrument_item .icon_next {
  position: absolute;
  right: 0;
  top: 50%;
  margin-top: -11rpx;
  width: 12rpx;
  height: 22rpx;
}


