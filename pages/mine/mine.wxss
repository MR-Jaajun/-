/* 遮罩层 */
.shade{
  width: 750rpx;
  height: 1200rpx;
  /* background: #f5f5f5; */
  /* opacity: 0.5; */
  position: fixed;
  top: 0;
}
.shade_top{
  width: 750rpx;
  height: 650rpx;
  background:rgba(250, 250, 250, 1);
  position: relative;
}
.shade_top image{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-100%);
  width: 150rpx;
  height: 150rpx;
}
.shade_top .login_btn{
  position: absolute;
  top: 56%;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 50rpx;
  border: 2rpx solid #8a8a8a;
  font-size: 24rpx;
  color: #666;
  line-height: 50rpx;
  text-align: center;
}
.shade .shade_bottom{
  width: 750rpx;
  height: 100%;
  background: #f5f5f5;
  opacity: 0;
}

/* 半屏弹框 */
.weui-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:all .3s;
}
.weui-half-screen-dialog{
  transition:all .3s;
  transform:translateY(100%);
}
.weui-demo-dialog_show{
  visibility:visible;
  opacity:1;
}
.weui-demo-dialog_show .weui-half-screen-dialog{
    transform:translateY(0);
}