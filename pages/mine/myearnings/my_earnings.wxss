/* pages/mine/myearnings/my_earnings.wxss */

page {
  height: 100%;
  background: rgba(250, 250, 250, 1);
  padding: 16rpx 20rpx 0 20rpx;
}

.top {
  position: relative;
  width: 690rpx;
  height: 148rpx;
  padding: 18rpx 0 0 20rpx;
  box-shadow: 0px 0px 5px rgba(160, 157, 157, 0.04);
  border-radius: 8rpx;
  background: url("https://apitest.xgscheng.com/static/weapp/profit.png") no-repeat bottom left,
                #fff;
  background-size: 710rpx 54rpx;
  margin-bottom: 16rpx;
}

/* 去提现 */

.withdraw_money {
  width: 112rpx;
  height: 42rpx;
  background: rgba(204, 204, 204, 1);
  border-radius: 11px;
  text-align: center;
  line-height: 34rpx;
  position: absolute;
  top: 42rpx;
  right: 20rpx;
}

.withdraw_money text {
  height: 34rpx;
  font-size: 24rpx;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.earnings text:nth-child(1), .balance text:nth-child(1) {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
}

.earnings text:nth-child(2), .balance text:nth-child(2) {
  font-size: 32rpx;
  font-family: DINPro;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.top image {
  width: 22rpx;
  height: 22rpx;
  margin-left: 14rpx;
}

/* 收益导航 */

.van-tab {
  font-size: 24rpx !important;
}

.van-tabs--card {
  width: 710rpx;
  margin-left: 0rpx !important;
}

.van-tabs__wrap {
  margin-bottom: 16rpx;
}

.van-tabs__scroll--card, .van-tab {
  border: 0 !important;
}

.van-ellipsis:nth-child(1) {
  border-radius: 8rpx 0px 0px 8rpx;
}

.van-ellipsis:nth-child(4) {
  border-radius: 0 8rpx 8rpx 0;
}

/* 自消费收益 */

.tab1_item {
  width: 710rpx;
  height: 205rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 0px 5px rgba(160, 157, 157, 0.04);
  border-radius: 4px;
  margin-top: 16rpx;
  padding-top: 13rpx;
}
.active{
  color: linear-gradient(180deg,rgba(102,102,102,1) 0%,rgba(75,74,74,1) 100%);
  background:linear-gradient(180deg,rgba(102,102,102,1) 0%,rgba(75,74,74,1) 100%);
}
.tab1_item>view {
  width: 50%;
  float: left;
  text-align: center;
}

.item_left text, .item_right text {
  display: block;
  font-size: 28rpx;
  letter-spacing: 2rpx;
  line-height: 66rpx;
  font-family: PingFang SC;
}

.tab1_item>view text:nth-child(1) {
  color: #333;
}

.tab1_item>view text:nth-child(2) {
  font-size: 32rpx;
  font-family: DINPro;
  font-weight: 600;
  color: rgba(51, 51, 51, 1);
}

.tab1_item>view text:nth-child(3) {
  font-size: 28rpx;
  font-weight: 400;
  color: rgba(102, 102, 102, 1);
}

/* 收入明细 */
.income_details,.withdrawal_record{
  width: 690rpx;
  height: 74rpx;
  line-height: 74rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 5px rgba(160,157,157,0.04);
  border-radius:4px;
  padding: 0 0rpx 0 20rpx;
  position: relative;
}
.income_details{
  margin: 44rpx 0 12rpx 0;
}
.income_details text{
  font-family:PingFang SC;
  font-size:28rpxpx;
  color:rgba(51,51,51,1);
}
.income_details image,.withdrawal_record image{
  width: 12rpx;
  height: 22rpx;
  position: absolute;
  right: 22rpx;
  top: 50%;
  transform: translateY(-50%);
}