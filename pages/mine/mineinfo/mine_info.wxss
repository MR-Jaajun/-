/* 用户详细信息 */

.detail_item {
  height: 112rpx;
  position: relative;
  padding: 0 0 0 32rpx;
  border-bottom: 2rpx solid rgba(248, 246, 246, 1);
}

.detail_item .detail_l {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
}

.detail_item .user_picture {
  width: 82rpx;
  height: 82rpx;
  box-shadow: 0rpx 6rpx 12rpx rgba(0, 0, 0, 0.1);
  vertical-align: middle;
  border-radius: 50%;
}

.detail_item .icon_next {
  width: 12rpx;
  height: 22rpx;
  margin-left: 20rpx;
}

.detail_item .detail_r {
  position: absolute;
  top: 50%;
  right: 34rpx;
  transform: translateY(-50%);
}

.detail_item .detail_r text {
  width: 146rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}

/* 退出按钮 */
.exit_btn{
  width:494rpx;
  height:96rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 3px 6px rgba(0,0,0,0.05);
  border-radius:33px;
  font-size:28rpx;
  text-align: center;
  color:rgba(51,51,51,1);
  font-weight:500;
  line-height: 96rpx;
  margin: 70rpx 128rpx 0 128rpx;
}

/* 弹窗 */
.show_picture{
  text-align: center;
}
.show_picture .p_item{
  width: 490rpx;
  height: 62rpx;
  line-height: 62rpx;
  font-size:28rpx;
  font-weight:400;
  color:rgba(51,51,51,1);
  padding: 20rpx 0 22rpx 0;
  border-bottom: 2rpx solid rgba(248, 246, 246, 1);
}
.show_name .n_item{
  width: 678rpx;
  font-size:28rpx;
  color:rgba(51,51,51,1);
  font-family:PingFang SC;
  font-weight:400;
  padding-left:32rpx; 
}
.show_name .n_item:nth-child(1){
  border-bottom: 1px solid rgba(248, 246, 246, 1);
  line-height: 110rpx;
  height: 110rpx;
}
.show_name .n_item:nth-child(1) input{
  text-align: center;
  display:inline-block;
  vertical-align: middle;
}
.show_name .n_item:nth-child(2){
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
  margin-left: -16rpx;
}
