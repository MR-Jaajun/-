/* pages/mine/mywallet/bean/bean.wxss */

page {
  height: 100%;
  background: rgba(250, 250, 250, 1);
  padding: 0 20rpx;
}

.top {
  width: 710rpx;
  height: 366rpx;
  text-align: center;
  padding-top: 144rpx;
}

.top view:nth-child(1) {
  height: 24px;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  letter-spacing: 2rpx;
}

.top .money {
  font-size: 36rpx;
  font-family: DINPro;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.top view:nth-child(2) {
  margin: 24rpx 0 36rpx 0;
}

.top view:nth-child(3) text {
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
  vertical-align: middle;
  margin-right: 10rpx;
}

.top view:nth-child(3) image {
  width: 12rpx;
  height: 22rpx;
  vertical-align: middle;
}

/* 按钮 */

.btn {
  width: 496rpx;
  height: 80rpx;
  background: linear-gradient(94deg, rgba(63, 73, 80, 1) 0%, rgba(44, 52, 56, 1) 100%);
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.05);
  border-radius: 33px;
  text-align: center;
  line-height: 80rpx;
  color:rgba(255,255,255,1);
  margin-left: 108rpx;
}
