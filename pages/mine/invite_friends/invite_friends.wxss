page {
  background: url(https://apitest.xgscheng.com/static/weapp/invite_bg.png);
  background-size: cover;
  font-family: Source Han Sans CN;
}

/* 用户信息 */

.userinfo {
  width: 718rpx;
  height: 115rpx;
  padding: 20rpx 0 0 32rpx;
}

.userinfo image {
  float: left;
  margin-right: 20rpx;
  width: 100rpx;
  height: 100rpx;
  background: rgba(209, 209, 209, 1);
  border-radius: 50%;
}

.userinfo view text {
  display: block;
  letter-spacing: 2rpx;
}

.userinfo view text:nth-child(1) {
  font-size: 32rpx;
  font-weight: bold;
  color: rgba(251, 251, 251, 1);
}

.userinfo view text:nth-child(2) {
  text-align: center;
  line-height: 40rpx;
  width: 128rpx;
  height: 40rpx;
  font-size: 22rpx;
  background: rgba(255, 162, 41, 1);
  border-radius: 20rpx;
  color: rgba(255, 255, 255, 1);
}

/* 标题 */

.title {
  text-align: center;
  font-size: 108rpx;
  height: 108rpx;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  text-shadow: 0px 3px 5px rgba(0, 0, 0, 0.16);
  letter-spacing: 20rpx;
  line-height: 108rpx;
}

/* 邀请码 */
.invitationCode{
  text-align: center;
  line-height: 60rpx;
  width: 280rpx;
  height: 60rpx;
  color:rgba(255,255,255,1);
  background: linear-gradient(90deg, rgba(198, 137, 217, 1) 0%, rgba(198, 137, 217, 1) 100%);
  border-radius: 42rpx;
  font-size:28rpx;
  margin: 50rpx 0 0 236rpx;
}

/* 二维码 */
.ewm{
  margin: 14rpx 0 0 172rpx;
  position: relative;
  width: 408rpx;
  height: 394rpx;
}
.ewm image:nth-child(1){
  width: 408rpx;
  height: 394rpx;
}
.ewm image:nth-child(2){
  position: absolute;
  width: 294rpx;
  height: 294rpx;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  background: #58bc58;
}

/* 分享 */
.share{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 92rpx;
}
.share>view{
  text-align: center;
  line-height: 92rpx;
  width: 375rpx;
  float: left;
}
.share view:nth-child(1){
  background:rgba(255,255,255,1);
  box-shadow:0rpx 6rpx 12rpx rgba(0,0,0,0.16);
  font-size:28rpx;
  color:rgba(51,51,51,1);
}
.share view:nth-child(2){
  background:linear-gradient(270deg,rgba(255,158,46,1) 0%,rgba(255,181,96,1) 100%);
  box-shadow:0rpx 6rpx 12rpx rgba(0,0,0,0.16);
  color:rgba(255,255,255,1);
}
.share>view image{
  margin-right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

/* 分享弹出层 */
.show_share{
  width: 750rpx;
  height: 310rpx;
  border-radius:6px 6px 0px 0px;
  position: relative;
}
.show_share .cel{
  position: absolute;
  text-align: center;
  line-height: 50rpx;
  width:402rpx;
  height:50rpx;
  background:rgba(75,74,74,1);
  border-radius:32rpx;
  color:rgba(210,205,205,1);
  font-size:24rpx;
  left: 50%;bottom: 24rpx;
  transform: translateX(-50%);
}
/* 分享图标 */
.show_share .share_way{
  height: 236rpx;
  width: 750rpx;
}

.share_way {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height:116rpx;
}

.share_way>view {
  text-align: center;
  flex: 1;
}

.share_way>view image {
  width: 120rpx;
  height: 120rpx;
}

.share_way>view text {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color:rgba(235,235,235,1);
  letter-spacing: 2rpx;
}